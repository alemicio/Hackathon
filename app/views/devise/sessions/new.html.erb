

<div class="container-fluid"  id="login">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="username" class="form-control" id="username" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password">
          </div>
          <div class="row">
            <div class="col-lg-3">
              <button type="submit" class="btn btn-default btn-lg" id="button-log">Log In</button>
            </div>
          </div>
        </form>
      </div>


      <div class="col-lg-6 col-lg-offset-3">
        <img src="<%= asset_path( 'marker_new.png' ) %>" class="img-responsive" >
      </div>
    </div>

  </div>
</div>
<div class="container-fluid"  id="footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <img src="<%= asset_path( 'milnaologo.png' ) %>" class="img-responsive">
      </div>
    </div>

  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Registration Form</h4>
      </div>
      <div class="modal-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h2>Insert your email address</h2>
            <div class="field input-group input-group-lg">
              <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Username" %>
            </div>

            <div class="field input-group input-group-lg">
              <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
            </div>

            <div class="actions input-group">
              <%= f.submit "Log in" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">SIGN UP</button>
      </div>
    </div>
  </div>
</div>

